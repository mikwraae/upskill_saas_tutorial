<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
  
    <div class="col-md-6">
          <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
          <h3><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        <%= @user.profile.description %>
      </div>
      
      <div class="well profile-block profile-contact-info">
        <h3>Contact information</h3>
        <% if current_user.plan_id == 2 %>
          <%= @user.profile.phone_number %> <br>
          <%= @user.profile.contact_email %> <br>
        <% end %>  
      </div>
      
      <% if @user.jobs.count > 0 %>
        <h3>Prior Jobs</h3>
        <ul class="list-unstyled">
        
          <% @user.jobs.each do |job| %>
            <li>
              <div class="well profile-block <%= cycle('profile-job-info-1', 'profile-job-info-2')%>">
                <h4><strong><%= job.job_title %> @ <%= job.company %></strong></h4>
                <p><%= job.start_date%> - <%= job.end_date %></p>
                <p><%= job.description %></p>
              </div>
            </li>
          <%end %>
        </ul>
      <% end %>
      
      
      <% if current_user.id == @user.id %>
        <% if current_user.jobs.count == 0 %>
          <div>
            <%= link_to "Add Job", new_user_job_path(user_id: current_user), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% else %>
          <div>
            <%= link_to "Edit Jobs", user_jobs_path(user_id: current_user), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        <% end %>
        <br>
        <div>
          <%= link_to "Edit Profile", edit_user_profile_path(user_id: current_user), class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      <% end %>
    </div>
  </div>
</div>