<%= form_for @job, url: user_jobs_path do |f| %>

    <div class="form group">
        <%= f.label :job_title %>
        <%= f.text_field :job_title, class: 'form-control' %>
    </div>
    
    
    <div class="form group">
        <%= f.label :start_date %> <br>
        <%= f.date_select :start_date, order: [:month, :day, :year] , class: 'form-control' %>
    </div>
    
    <div class="form group">
        <%= f.label :end_date %> <br>
        <%= f.date_select :end_date, order: [:month, :day, :year] , class: 'form-control' %>
    </div>
    
    <div class="form group">
        <%= f.label :company %>
        <%= f.text_field :company, class: 'form-control' %>
    </div>
    
    <div class="form group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
    </div>
    <br>
    <div class="form-group">
        <%= f.submit "Add Job", class: 'btn btn-primary' %>
    </div>
<% end %>