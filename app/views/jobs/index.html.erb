<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <ul class="list-unstyled">
                <% if @user.jobs.count > 0 %>
                    
                    
                    
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <th>Job Title</th>
                                    <th>Company</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </thead>
                                
                                <% @user.jobs.each do |job| %>
                                
                                <tr>
                                    <td><%= job.job_title %></td>
                                    <td><%= job.company %></td>
                                    <td><%= link_to edit_user_job_path(user_id: current_user, id: job.id), class: 'btn btn-primary' do %>
                                        <i class="fa fa-edit"></i>
                                    <% end %>
                                    </td>
                                        
                                    <td><%= link_to user_job_path(user_id: current_user, id: job.id), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger text-right' do %>
                                        <i class="fa fa-trash"></i>
                                    <% end %>
                                    </td>
                                </tr>
                                
                                <% end %>
                                
                            </table>
                        </div>
                    
                    
                <% else %>
                    redirect_to user_path(user_id: current_user)
                <% end %>
                <%= link_to "Add Job", new_user_job_path(user_id: current_user), class: 'btn btn-primary btn-lg btn-block' %>
            </ul>
        </div>
        
    </div>
</div>